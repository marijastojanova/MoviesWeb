@model MoviesWeb.Models.Payment

@{
    ViewData["Title"] = "Payment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoviesWeb.styles.css" asp-append-version="true" />
    <style>
        :root {
            --primary-bg-color: #f8f9fa;
            --card-bg-color: #ffffff;
            --card-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            --btn-primary-bg: #007bff;
            --btn-primary-hover-bg: #0056b3;
            --btn-secondary-bg: #6c757d;
            --btn-secondary-hover-bg: #5a6268;
        }

        body {
            background-color: #121212;
            font-family: 'Arial', sans-serif;
            color: #333;
        }

        .container {
            margin-top: 30px;
        }

        .card {
            background-color: var(--card-bg-color);
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: var(--card-shadow);
            padding: 20px;
            margin-bottom: 30px;
        }

        .card-header {
            background-color: var(--btn-primary-bg);
            color: #fff;
            padding: 10px;
            border-radius: 8px 8px 0 0;
            font-size: 1.25rem;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: var(--btn-primary-bg);
            border-color: var(--btn-primary-bg);
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: var(--btn-primary-hover-bg);
                border-color: var(--btn-primary-hover-bg);
            }

        .btn-secondary {
            background-color: var(--btn-secondary-bg);
            border-color: var(--btn-secondary-bg);
        }

            .btn-secondary:hover {
                background-color: var(--btn-secondary-hover-bg);
                border-color: var(--btn-secondary-hover-bg);
            }

        .mt-4 {
            margin-top: 1.5rem !important;
        }

        .text-danger {
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h1>@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        <h4>Please enter your payment details</h4>
                        <hr />
                        <form asp-action="DeleteAllConfirmed">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group">
                                <label asp-for="Name" class="control-label">First Name</label>
                                <input asp-for="Name" class="form-control" placeholder="John" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName" class="control-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Doe" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CardNumber" class="control-label">Card Number</label>
                                <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" />
                                <span asp-validation-for="CardNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label asp-for="ExpiryMonth" class="control-label">Expiry Month</label>
                                    <input asp-for="ExpiryMonth" class="form-control" placeholder="MM" />
                                    <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ExpiryYear" class="control-label">Expiry Year</label>
                                    <input asp-for="ExpiryYear" class="form-control" placeholder="YYYY" />
                                    <span asp-validation-for="ExpiryYear" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="SecurityCode" class="control-label">Security Code</label>
                                <input asp-for="SecurityCode" class="form-control" placeholder="123" />
                                <span asp-validation-for="SecurityCode" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="City" class="control-label">City</label>
                                <input asp-for="City" class="form-control" placeholder="New York" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ZipCode" class="control-label">Zip Code</label>
                                <input asp-for="ZipCode" class="form-control" placeholder="10001" />
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" id="buyButton" value="Buy Now" class="btn btn-primary btn-lg" />
                            </div>
                            <div class="mt-4">
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
