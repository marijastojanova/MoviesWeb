@model IEnumerable<MoviesWeb.Models.BuyTicket>

@{
    ViewData["Title"] = "Show";

    var totalSum = Model.Sum(item => item.Amount);
}

<h1>Show</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ShowName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a href="@Url.Action("DeleteTicketShowConfirmed", new { id = item.Id })" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Total</th>
            <th>Sum: @totalSum</th>
            <th></th>
            <th><a href="@Url.Action("Payment")" class="btn btn-outline-danger">Buy</a></th>
            <th></th>
        </tr>
    </tfoot>
</table>

<div class="form-group button-group">
    <a asp-action="Index" class=" text-center">Back to List</a>
</div>