@model MoviesWeb.Models.Show

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/static/images/logo-large.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: black;
            color: white;
        }

        .kontainer {
            background-color: white;
            padding: 40px;
            margin: 60px auto;
            border-radius: 10px;
            max-width: 800px;
            box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3);
            color: black;
            font-size: 20px;
        }

        h1 {
            font-size: 30px;
            margin-bottom: 20px;
        }

        h3 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }

        .btn-danger {
            padding-left: 2.5rem;
            padding-right: 2.5rem;
            border-radius: 10px;
            box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
            margin-top: 20px;
            width: 175px;
        }

        .text-center a {
            color: black;
            cursor: pointer;
            text-decoration: underline;
        }

        dl.row dt, dl.row dd {
            font-size: 16px;
            margin-bottom: 10px;
        }

        dl.row dt {
            font-weight: bold;
        }

        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container kontainer">
        <h1>Delete Movie</h1>
        <h3>Are you sure you want to delete this?</h3>

        <div>
            <h4>Movie Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Release_date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Release_date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Duration)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Duration)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Genre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Genre)
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed">
                @Html.HiddenFor(model => model.Id)
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="text-center">Back to List</a>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
